#!/usr/bin/env bash
. $PLUGIN_LIB

TIMER_FILES=( $(find $DU_DIR -name "timer-*.json") )

on-initialize() {
  if [ ${#TIMER_FILES[@]} -eq 0 ]; then return $PLUGIN_DISABLED; fi
  for timer in ${TIMER_FILES[@]}
  do
    substitute-env rewrite -e $PLUGIN_SUBSTITION_DIR -f $file
  done
  return $PLUGIN_ENABLED
}

main "$@"
exit 1
