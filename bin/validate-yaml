#!/usr/bin/env bash

usage() {
cat<<EOF > /dev/stderr
$0 <FILE> <NAMESPACE> <WEAK_STRUCTURE_VALIDATION> <DEPLOYMENT_YAML_VALIDATION>

ARGS:
  <FILE>
    Input .yaml file to validate.
  <NAMESPACE>
    The required namespace to validate.
  <WEAK_STRUCTURE_VALIDATION>
    Required boolean to lower structure testing requirements.
  <DEPLOYMENT_YAML_VALIDATION>
    Required boolean to specify if a deployment yaml is being validated.

EOF
echo -e "$1" > /dev/stderr
exit 1
}

FILE=$1
NAMESPACE=$2
WEAK_STRUCTURE_VALIDATION=$3
DEPLOYMENT_YAML_VALIDATION=$4

[ -z $FILE ] && echo "No yaml file specified." && usage && exit 1
[ -z $NAMESPACE ] && echo "No namespace specified." && usage && exit 1
[ -z $WEAK_STRUCTURE_VALIDATION ] && echo "Structure validation type not specified." && usage && exit 1
[ -z $DEPLOYMENT_YAML_VALIDATION ] && echo "Deployment yaml validation type not specified." && usage && exit 1

# Only do the ingress and namespace test if we are validating a deployment yaml
if [ "$DEPLOYMENT_YAML_VALIDATION" == 'true' ]; then
  INGRESS_TEST=$(grep "kind: Ingress" $FILE)
  [ ! -z "$INGRESS_TEST" ] && echo "============================================================" \
    && echo "Ingress Validation Failed. Do NOT include ingress rules in deployment yamls!" \
    && exit 1

  NAMESPACE_TEST=$(grep "kind: Namespace" $FILE)
  [ ! -z "$NAMESPACE_TEST" ] && echo "============================================================" \
    && echo "Namespace Test Validation Failed. Do NOT include Namespace creation in deployment yamls!" \
    && exit 1
fi

#todo combine two methods below to just check du_namespace
SUPER_NAMESPACE_TEST=$(grep -E '^.*(namespace):' $FILE)
if [ "$(echo $SUPER_NAMESPACE_TEST | wc -l)" != "$(echo $SUPER_NAMESPACE_TEST | grep -c $NAMESPACE)" ]; then
 echo "============================================================" \
 && echo "Namespace Validation Failed. Namespace should only be: $NAMESPACE." \
 && exit 1
fi

DEFAULT_NAMESPACE_TEST=$(grep -E '^.*(namespace):' $FILE)
echo "$DEFAULT_NAMESPACE_TEST" | while read line ; do
  temp_namespace_value=$(echo $line | awk -F'namespace: ' '{print $2}')

  if [[ "$temp_namespace_value" == "default" ]] || [[ "$temp_namespace_value" == "" ]]; then
    echo "============================================================" \
      && echo "Default Namespace Validation Failed. Namespace should never be blank or default." \
      && exit 1
  fi
done

if [ "$WEAK_STRUCTURE_VALIDATION" == 'true' ]; then echo "Weak yaml validation is on, be careful!" && exit 0; fi

NAMESPACE_STRUCT=$(grep -E '^(kind|metadata|  namespace):' $FILE)
echo "$NAMESPACE_STRUCT" | while read line ; do

  if [ "$metadata" = true ]; then
    if [[ "$line" == *"namespace"* ]]; then
      unset metadata
      continue
    else
      echo "============================================================" \
        && echo "Namespace Validation Failed. Missing 'namespace:' field following a 'metadata' field." \
        && exit 1
    fi
  fi

  if [ "$kind" = true ]; then
    if [[ "$line" == *"metadata:"* ]]; then
      unset kind
      metadata=true
      continue
    else
      echo "============================================================" \
      && echo "Metadata Validation Failed. Missing 'metadata' field following a 'kind' field." \
      && exit 1
    fi
  fi

  if [[ "$line" == *"kind:"* ]]; then
    kind=true
    continue
  fi

done
